<!-- Loop over each object in the projects array -->

<div class='posts-list'>

  {{#each posts as |post|}}
    <div class='card-border m-2 '>
      <div class="flex p-05 justify-space-between cardHeader cardHeaderAnimation">
        <div class="flex">
          <img class="imgBord" style="width: 20px;" src="/images/profile icon.png" alt="">
          <p class='fs-1 ml-1'>
            {{post.user.name}}

    <div class="flex pl-1">
      <a class="td-n ml-1 mb-2" href='reply/{{post.id}}'><i class="far fa-comment"></i>Reply </a>
    
      <div class="pl-1">...</div>
      <ul class="invisible">
      </ul>
    </div>
    <div class='col-md-4'>
        <button
          class='btn btn-sm btn-danger'
          type='click'
          data-id='{{post.id}}'
        >DELETE</button>
      </div>
    <div class="m-2 bt ">Replies</div>
    {{#each post.replies as |reply|}}
      <div class="reply-border m-1 pl p-1">
        {{post.reply.user.name}}
        {{reply.message}}

      </div>

      <div class='m-2 bt'></div>
      {{#each post.replies as |reply|}}
        <div class="reply-border m-1 pl p-1 repTextBox">
          {{reply.user.name}}
          {{reply.message}}
        </div>
      {{/each}}
    </div>
  {{/each}}

</div>
<script src='./js/homepage.js'></script>